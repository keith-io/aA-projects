<% if edit %>
    <% action = cat_url(cat) %>
<% else %>
    <% action = cats_url %>
<% end %>

<form action=<%= action %> method="POST">
<% if edit %>
    <input type="hidden" name="_method" value="PATCH">
<% end %>
    <input type="text" id="name" name="cat[name]" value="<%= edit ? cat.name : "Name"%>"><br>
    <input type="date" id="birthday" name="cat[birth_date]">
    <select name="cat[color]">
        <option value="<%= cat.color %>" selected disabled >currently <%= cat.color %></option>
        <option value="black">Black</option>
        <option value="white">White</option>
        <option value="orange">Orange</option>
        <option value="grey">Grey</option>
        <option value="calico">Calico</option>
    </select><br>
    <label>Sex</label>
    <input type="radio" name="cat[sex]" value="M" >M
    <input type="radio" name="cat[sex]" value="F" >F<br>

<input type="submit" value="<%= edit ? "Edit da cat" : "Create!" %>">